@{
    ViewData["Title"] = "IntroPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Intro Page</title>
    <style>
        header {
            position: fixed;
            width: 100%;
        }
        /* CSS for the heading */
        .heading {
            text-align: center;
            margin-top: 20px;
            font-size: 36px;
            font-family: Arial, sans-serif;
            color: #1b8521;
            font-weight: bold;
            text-shadow: 2px 2px 2px rgba(0,0,0,0.1);
        }

        /* CSS for the button */
        .startbtn {
            display: block;
            margin: 20px auto;
            padding: 10px 20px;
            background-color: #007bff; /* You can change this color */
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .startbtn:hover {
            background-color: #0056b3; /* You can change this color */
        }

        .description {
            margin-top: 20px;
            font-size: 18px;
            color: #044a08;
            line-height: 1.6;
        }
    </style>
</head>
<body>
    <!-- Image -->
    <center><img src="@ViewBag.ImageUrl" type="image/png" width="70%" height="70%"></img></center>

    <!-- Description -->
    <center>
        <p class="description">
        How Much Do you Know About Sustainable Lifestyle ?
        Let's Figure Out Together By Taking A Quiz Now!
    </p>
    </center>

    <!-- Form with button -->
    <form method="get" action="@Url.Action("ShowQuiz", "Quiz")">
        <center><button type="submit" class="startbtn">Start Quiz!</button>
    </form>
</body>
</html>
