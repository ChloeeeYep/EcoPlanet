@model EcoPlanet.Models.GoodsViewModel

@{
    var goods = Model.GoodsList.FirstOrDefault();
    var imageKey = goods?.goodsImage;
    var imageUrl = imageKey != null ? $"https://ecoplanet.s3.amazonaws.com/{imageKey}" : null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Details for @goods.goodsName</title>
    <link rel="stylesheet">
</head>
<body>

    <div class="goods-details-container">
        <div class="goods-image">
            @if (imageUrl != null)
            {
                <img src="@imageUrl" alt="Image of @goods.goodsName" style="max-width:300px; max-height:300px; object-fit:cover;" />
            }
            else
            {
                <div class="placeholder">Image not available</div>
            }
        </div>
        <div class="goods-info">
            <h1>@goods.goodsName</h1>
            <br />
            <p class="type">Type: @goods.goodsType</p>
            <br />
            <p class="description">Description: @goods.goodsDescriptions</p>
            <br />
            <p class="expiry">Expiry Date: @goods.goodsExpiry.ToString("MM/dd/yyyy")</p>
            <br />
            <p class="price">Price: RM @goods.goodsPrice</p>
            <br />
            <p class="quantity">Available Quantity: @goods.goodsQuantity</p>
            <br />

        <div class="actions">
            <form asp-controller="Cart" asp-action="AddToCart" method="post" enctype="multipart/form-data">
                <input type="hidden" name="goodsId" value="@goods.goodsId" />
                <input type="number" name="quantity" value="1" min="1" max="@goods.goodsQuantity" class="form-control" />
                    <br />
                <button type="submit" class="btn add-to-cart">Add to cart</button>
                <button class="btn back" onclick="window.history.back();">Back</button>
            </form>
        </div>


    </div>
    </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var quantityInput = document.getElementById("quantity");
            var addToCartButton = document.querySelector(".add-to-cart");
            var availableQuantity = @goods.goodsQuantity;

            quantityInput.addEventListener("change", function () {
                var enteredQuantity = parseInt(quantityInput.value);
                if (enteredQuantity > availableQuantity) {
                    alert("Entered quantity exceeds available quantity. Please enter a quantity less than or equal to " + availableQuantity + ".");
                    quantityInput.value = 1;
                    addToCartButton.disabled = true;
                } else {
                    addToCartButton.disabled = false;
                }
            });
        });
    </script>

</body>
</html>

<style>
    .goods-details-container {
        display: flex;
        align-items: flex-start;
        justify-content: center;
        max-width: 1000px;
        margin: auto;
        background-color: #fff;
        padding: 20px;
        box-shadow: 0px 0px 10px rgba(0,0,0,0.1);
    }

    .goods-image,
    .goods-info {
        flex: 1;
    }

    .placeholder {
        width: 300px;
        height: 300px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f0f0f0;
        color: #ccc;
        font-style: italic;
        font-size: 16px;
        border: 1px dashed #ccc;
    }

    .goods-info {
        padding-left: 20px;
    }

    .goods-info h1 {
        margin-bottom: 0.5em;
    }

    .goods-info p {
        margin-bottom: 0.25em;
        line-height: 1.5;
    }

    .btn {
        padding: 10px 20px;
        margin-right: 10px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        text-transform: uppercase;
        font-weight: bold;
    }

    .add-to-cart {
        background-color: #008cba;
        color: white;
    }

    .back {
        background-color: #6c757d;
        color: white;
    }
</style>