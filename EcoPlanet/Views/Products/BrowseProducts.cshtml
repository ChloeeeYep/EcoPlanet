@model ProductsViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Products </title>
</head>
<body>

    <div class="container">
        <div class="search-container">
            <form asp-action="Search" asp-controller="Products" method="get">
                <input type="text" name="searchTerm" placeholder="Search products..." class="search-input" />
                <button type="submit" class="search-button">Search</button>
            </form>
        </div>

        @foreach (var category in Model.ProductsList.GroupBy(g => g.productsType))
        {
            <h3>@category.Key</h3>
            <div class="products-container">
                @foreach (var item in category)
                {
                    <div class="products-item">
                        @if (!string.IsNullOrEmpty(item.productsImage))
                        {
                            var image = Model.ImageList.FirstOrDefault(i => i.Key.Trim() == item.productsImage.Trim());


                            if (image != null)
                            {
                                string imageURL = "https://" + image.BucketName + ".s3.amazonaws.com/" + image.Key;
                                <img src="@imageURL" width="100" height="100" />
                            }
                            else
                            {
                                <span>No Image Provided @item.productsImage</span>
                            }
                        }
                        else
                        {
                            <span>No Image Provided</span>
                        }
                        <div class="products-details">
                            <span class="item-name">@item.productsName</span>
                            <span class="item-price">RM @item.productsPrice</span>
                            <div class="quantity-selector">
                                <input type="number" class="quantity-input" value="1" min="1" max="@item.productsQuantity">
                            </div>
                            <button class="btn view">View</button>
                            <button class="btn add-to-cart">Add to cart</button>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</body>
</html>

<style>
    .container {
        width: 80%;
        margin: 20px auto;
        max-width: 1200px;
    }

    .products-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px; /* Increase gap for better spacing */
    }

    .products-item {
        flex: 1;
        min-width: 250px; /* Minimum width of each card */
        max-width: 300px; /* Maximum width of each card */
        border: 1px solid #ccc;
        padding: 15px;
        text-align: center;
        background-color: #fff; /* Set background to white */
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2); /* Add some shadow for depth */
        border-radius: 10px; /* Rounded corners for the cards */
        transition: 0.3s; /* Transition for hover effect */
    }

        .products-item:hover {
            box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2); /* Shadow effect on hover */
        }

    .products-image {
        width: 100%;
        height: auto;
        border-bottom: none; /* Remove border bottom */
        margin-bottom: 15px; /* Increase margin bottom */
    }

    .products-details {
        display: flex;
        flex-direction: column;
        justify-content: space-between; /* Space out the content */
    }

        .products-details span {
            margin-bottom: 10px; /* Add margin to the bottom of each span */
        }

    .add-to-cart, .view {
        width: 100%; /* Full width buttons */
        margin-top: 10px; /* Margin top for spacing between buttons */
    }

    .add-to-cart {
        background-color: #1a73e8;
        color: white;
        border: none;
        padding: 10px;
        border-radius: 4px;
        cursor: pointer;
    }

        .add-to-cart:hover {
            background-color: #0c47a1;
            color: white;
        }

    .view {
        background-color: #7CC59A;
        color: white;
        border: none;
        padding: 10px;
        border-radius: 4px;
        cursor: pointer;
    }

        .view:hover {
            background-color: #19944B;
            color: white;
        }

    .item-name {
        font-weight: bold; /* Make the item name bold */
        display: block; /* Ensure the name is on its own line */
        margin-bottom: 5px; /* Space after the name */
    }

    .item-price {
        display: block; /* Ensure the price is on its own line */
        margin-bottom: 10px; /* Space after the price */
    }

    .quantity-selector {
        display: flex;
        align-items: center;
        margin: 10px 0;
    }

    .quantity-input {
        flex: 1;
        margin-left: 10px; /* Add space between the label and the input */
        padding: 5px;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 16px; /* Adjust size as needed */
    }

    .search-container {
        text-align: center;
        margin-bottom: 30px;
    }

    .search-input {
        padding: 10px;
        margin-right: 5px;
        font-size: 16px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .search-button {
        padding: 10px 20px;
        font-size: 16px;
        background-color: #1a73e8;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        .search-button:hover {
            background-color: #0c47a1;
        }


</style>


