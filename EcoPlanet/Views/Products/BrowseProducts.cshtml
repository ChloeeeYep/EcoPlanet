    }

    .sidebar a:hover {
        background-color: #ddd;
    }

    .content {
        flex-grow: 1;
        padding: 20px;
    }


    .sidebar a.active {
        background-color: #ddd;
        font-weight: bold;
        color: #333;
    }

    .active-category {
        margin-top: 80px; /* Increased space for active category */
    }

    .clear-button {
        padding: 10px 20px;
        font-size: 16px;
        background-color: #f44336; /* Red color for clear button */
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        margin-left: 10px; /* Space from the search box */
    }

        .clear-button:hover {
            background-color: #d32f2f; /* Darker red on hover */
        }

</style>


