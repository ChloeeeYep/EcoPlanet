@model EcoPlanet.Models.Trashpedia
<br /><br />
<div class="details-container">
    <div class="image-section">
        @if (!string.IsNullOrEmpty(Model.Images))
        {
            <img src="@Model.Images" class="trashpedia-image" alt="Image for @Model.Name" />
        }
    </div>
    <div class="info-section">
        <br><h1><center>@Model.Name </center></h1></br>
        <p>Materials: <br>
        <textarea class="info-textarea" readonly>@Model.Materials</textarea>
        <p>Actions: <br> 
        <textarea class="info-textarea" readonly>@Model.Actions</textarea>
        <p>Alternatives: <br>  
        <textarea class="info-textarea" readonly>@Model.Alternatives</textarea>
        <br><br>
        <a asp-action="ShowTrashpedia" asp-controller="Trashpedia" class="btnL">Back</a>
    </div>
</div>

<script>
    // Function to resize textarea based on content
    function resizeTextarea(el) {
        el.style.height = 'auto'; // Reset the height
        el.style.height = el.scrollHeight + 'px'; // Set the height to the scroll height
    }

    // Apply the resizeTextarea function on each readonly textarea
    document.addEventListener('DOMContentLoaded', function() {
        const textareas = document.querySelectorAll('.info-textarea[readonly]');
        textareas.forEach(textarea => {
            resizeTextarea(textarea);
        });
    });
</script>

<style>
    header {
        position: fixed;
        width: 100%;
    }

    .details-container {
        font-family: 'Poppins', sans-serif;
        display: flex;
        flex-direction: row;
        align-items: flex-start;
        justify-content: center;
        margin: 7rem auto; /* Centering in the page */
        background: #fff;
        padding: 1rem;
        border-radius: 10px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
        width: 100%; /* Adjust width as needed */
    }

    /* Adjustments to .image-section for proper scaling */
    .image-section {
        width: 50%; /* Maintain the width of the image section */
        padding-bottom: 1rem; /* Add space below the image */
        display: flex;
        align-items: center;
        justify-content: center;
        align-self: center;
    }

    .image-section img {
        width: 80%; /* Increase the image width */
        max-height: auto; /* Allow the height to adjust according to the width */
        display: block;
        object-fit: contain; /* Ensure full image is shown */
        margin-top: 1rem; /* Push the image down a bit */
    }

    /* Adjustments to .info-section for layout and spacing */
    .info-section {
        width: 60%; /* Adjust text section width */
        padding: 2rem;
        display: flex;
        flex-direction: column;
        justify-content: space-around; /* Distribute space evenly */
    }

    .info-section h1 {
        font-size: 2rem;
        color: #312f3a;
        margin-bottom: 1rem;
    }

    .info-section p {
        font-size: 1.2rem;
        color: #45424b;
        margin-bottom: 1.5rem; /* Increased space between paragraphs */
    }

    /* Button styling */
    .btnL {
        padding: 20px 20px;
        background-color: #7391C9;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 15px;
        text-align: center;
        transition: background-color 0.3s ease;
        text-decoration: none;
    }

    .btnL:hover {
        background-color: #3F66AF;
        color: white; /* Keep the text color white on hover */
    }

    /* Textarea styling without a predefined height */
    .info-textarea {
        width: 100%; /* Full width of the container */
        padding: 10px; /* Inner space of the textarea */
        background-color: #white; /* Light grey background */
        border: none; 
        border-radius: 4px; /* Rounded corners */
        margin-bottom: 1rem; /* Space below each textarea */
        overflow: hidden; /* Hide the overflow to remove scrollbar */
        resize: none; /* Prevent resizing */
        font-family: 'Poppins', sans-serif; /* Match font to the rest of the page */
        font-size: 1rem; /* Slightly smaller font size */
        color: #45424b; /* Match font color to the rest of the page */
        line-height: 1.5; /* Line height for better readability */
    }

        /* No changes to the read-only style */
        .info-textarea[readonly] {
            background-color: white; /* Different background for readonly */
            cursor: not-allowed; /* Show a not-allowed cursor on hover */
            border: none;
        }
</style>