@model EcoPlanet.Models.Trashpedia

<div class="form-container">
    <h1>Edit Trashpedia</h1>
    <hr />
    <form method="post" asp-action="UpdateData" asp-controller="Trashpedia">
        <div class="form-group">
            <input asp-for="Id" hidden />
        </div>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" required />
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="Materials"></label>
            <textarea asp-for="Materials" required></textarea>
            <span asp-validation-for="Materials"></span>
        </div>
        <div class="form-group">
            <label asp-for="Actions"></label>
            <textarea asp-for="Actions" required></textarea>
            <span asp-validation-for="Actions"></span>
        </div>
        <div class="form-group">
            <label asp-for="Alternatives"></label>
            <textarea asp-for="Alternatives" required></textarea>
            <span asp-validation-for="Alternatives"></span>
        </div>
        <div class="form-group">
            <label asp-for="Images"></label>
            <input asp-for="Images" required />
            <span asp-validation-for="Images"></span>
        </div>
        <div class="form-group submit-group">
            <button type="submit" class="btn-update">Update</button>
        </div>
    </form>
</div>

<style>
    .form-container {
        max-width: 500px;
        margin: 0 auto;
        margin-bottom: 50px; /* Add some space at the bottom */
        padding: 20px;
        background: #f9f9f9;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    .form-group {
        margin-bottom: 15px;
        text-align: left;
    }

    label {
        display: block;
        margin-bottom: 5px;
        color: #333;
        font-size: 16px;
    }

    input[type="text"],
    input[type="date"],
    textarea {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
        resize: vertical; /* Allows the textarea to be resized vertically */
    }

    textarea {
        min-height: 100px; /* Initial height of the textarea */
    }

    .btn-update {
        background-color: #4CAF50;
        color: white;
        border: none;
        padding: 12px 20px;
        margin-top: 10px;
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
        resize: vertical;
    }

     .btn-update:hover {
        background-color: #45a049;
     }

    span.validation-message {
        color: #a94442;
        font-size: 12px;
    }
</style>

