@model EcoPlanet.Models.Trashpedia
<center>
    <h1>Edit Trashpedia</h1>
    <br /><hr />
    <form method="post" asp-action="UpdateData" asp-controller="Trashpedia" enctype="multipart/form-data">
        <table border="1">
            <tr>
                <input asp-for="Id" hidden />
            </tr>
            <tr>
                <th><label asp-for="Name"></label></th>
                <td><input asp-for="Name" required /></td>
                <td><span asp-validation-for="Name"></span></td>
            </tr>
            <tr>
                <th><label asp-for="Materials"></label></th>
                <td><textarea asp-for="Materials" required></textarea></td>
                <td><span asp-validation-for="Materials"></span></td>
            </tr>
            <tr>
                <th><label asp-for="Actions"></label></th>
                <td><textarea asp-for="Actions" required></textarea></td>
                <td><span asp-validation-for="Actions"></span></td>
            </tr>
            <tr>
                <th><label asp-for="Alternatives"></label></th>
                <td><textarea asp-for="Alternatives" required></textarea></td>
                <td><span asp-validation-for="Alternatives"></span></td>
            </tr>
            <tr>
                <th><label asp-for="Images"></label></th>
                <td><input type="file" name="Images" accept="image/" multiple /></td>
            </tr>
            <tr>
                <td colspan="2" style="text-align:center">
					<button type="submit" class="btn-info">Update</button>
                </td>
            </tr>
        </table>
    </form>
</center>

<style>
	form {
		max-width: 600px;
	}

	table {
		width: 100%;
		border-collapse: collapse;
		margin: 20px 0;
	}

	th, td {
		padding: 10px;
		border: 1px solid #ddd;
		text-align: left;
	}

	th {
		background-color: #f4f4f4;
	}

	input[type="text"],
	select {
		width: 100%;
		padding: 8px;
		margin: 5px 0;
		display: inline-block;
		border: 1px solid #ccc;
		border-radius: 4px;
		box-sizing: border-box;
	}

	button.btn-info {
		width: 100%;
		background-color: #4A90E2;
		color: white;
		padding: 14px 20px;
		margin: 8px 0;
		border: none;
		border-radius: 4px;
		cursor: pointer;
	}

		button.btn-info:hover {
			background-color: #357ABD;
		}

	/* This targets the td elements that contain the span for validation message */
	td:has(> span[data-valmsg-for]:empty) {
		display: none;
	}

	/* This targets the td elements that contain the span for validation message with content */
	td:has(> span[data-valmsg-for]:not(:empty)) {
		display: table-cell; /* This ensures the cell is displayed when there's a validation message */
	}

	/* This targets empty validation message spans */
	span[data-valmsg-for]:empty {
		display: none;
	}

	textarea {
		min-height: 100px; /* Initial height of the textarea */
		width: 100%;
		padding: 8px;
		margin: 5px 0;
		display: inline-block;
		border: 1px solid #ccc;
		border-radius: 4px;
		box-sizing: border-box;
	}
</style>

