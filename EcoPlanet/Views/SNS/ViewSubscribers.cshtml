
@{
    ViewData["Title"] = "View Subscribers";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int counter = 1; // Start the counter at 1
}

<h1>Subscribers Lists</h1>
<br /><br /><hr />


<div class="header-container">
    <div class="total-subscribers">
        <span>Total Subscribers:</span>
        <span class="subscribers-count">@Model.Count</span>
    </div>
</div>

<div class="table-container">
    <table>
        <thead>
            <tr>
                <th>No.</th>
                <th>Email</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@counter</td>
                    <td>@user.Email</td>
                    <td>@user.FullName</td>
                </tr>
                counter++;
            }
        </tbody>
    </table>
</div>

<style>
