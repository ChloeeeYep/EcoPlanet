<script>
    document.getElementById('ExpiryDate').addEventListener('input', function (e) {
        var input = e.target;
        var inputValue = input.value;

        // Remove any non-digit characters
        var numericValue = inputValue.replace(/\D/g, '');

        // Slice and add slash after 2 digits
        if (numericValue.length > 2) {
            input.value = numericValue.slice(0, 2) + '/' + numericValue.slice(2, 4);
        } else {
            input.value = numericValue;
        }
    });

    document.addEventListener('DOMContentLoaded', function () {
        var cardHolderInput = document.getElementById('CardHolderName');
        var cardNumberInput = document.getElementById('CardNumber');
        var cvvInput = document.getElementById('CVV');

        // Pattern validation messages
        cardHolderInput.oninvalid = function (event) {
            event.target.setCustomValidity('Card holder name must contain more than 5 alphabetic characters and spaces only.');
        };
        cardNumberInput.oninvalid = function (event) {
            event.target.setCustomValidity('Card number must be a 16-digit number.');
        };
        cvvInput.oninvalid = function (event) {
            event.target.setCustomValidity('CVV must be a 3-digit number.');
        };

        // Reset the custom validation message on input
        cardHolderInput.oninput = function (event) {
            event.target.setCustomValidity('');
        };
        cardNumberInput.oninput = function (event) {
            event.target.setCustomValidity('');
        };
        cvvInput.oninput = function (event) {
            event.target.setCustomValidity('');
        };
    });

</script>

            