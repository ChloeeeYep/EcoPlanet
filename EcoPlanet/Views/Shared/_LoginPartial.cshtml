@using Microsoft.AspNetCore.Identity
@using EcoPlanet.Areas.Identity.Data

@inject SignInManager<EcoPlanetUser> SignInManager
@inject UserManager<EcoPlanetUser> UserManager
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        // Get the user asynchronously
        var user = await UserManager.GetUserAsync(User);
        // Check the user type and render different items
        @if (user.UserType == 'A')
        {
            <li class="nav-item">
                <a id="manageusers" class="nav-link text-dark" asp-action="Index" asp-controller="Admin">Manage Users</a>
            </li>
            <li class="nav-item">
                <a id="addtrashpedia" class="nav-link text-dark" asp-action="Index" asp-controller="Trashpedia"> Manage Trashpedia </a>
            </li>
            <li class="nav-item">
                <a id="addproducts" class="nav-link text-dark" asp-action="Index" asp-controller="Products"> Manage Products </a>
            </li>
            <li class="nav-item">
                <a id="addquiz" class="nav-link text-dark" asp-action="Index" asp-controller="Quiz">Manage Quiz</a>
            </li>
            <li class="nav-item">
                <a id="SNS" class="nav-link text-dark" asp-action="sendBroadcastMessage" asp-controller="SNS">Broadcast Message</a>
            </li>
        }
        else if (user.UserType == 'U')
        {
            <li class="nav-item">
                <a id="viewtrashpedia" class="nav-link text-dark" asp-action="ShowTrashpedia" asp-controller="Trashpedia">Trashpedia</a>
            </li>
            @* <li class="nav-item">
                <a id="browsegoods" class="nav-link text-dark" asp-action="BrowseGoods" asp-controller="Goods"> Goods </a>
            </li> *@
            <li class="nav-item">
                <a id="browseproducts" class="nav-link text-dark" asp-action="IntroPage" asp-controller="Products"> Reusable Products </a>
            </li>
            <li class="nav-item">
                <a id="quiz" class="nav-link text-dark" asp-action="ShowQuiz" asp-controller="Quiz"> Quiz </a>
            </li>
           @*  <li class="nav-item dropdown">
                <a id="orders" class="nav-link text-dark dropdown-toggle" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Orders History
                </a>
                <div class="dropdown-menu" aria-labelledby="orders">
                    <a href="@Url.Action("ShowOrders", "ProductsOrder")" class="dropdown-item">Products</a>
                    <a href="@Url.Action("ShowOrders", "Order")" class="dropdown-item">Goods</a>
                </div>
            </li> *@
            <li class="nav-item">
                <a id="ShowOrders" class="nav-link text-dark" asp-action="ShowOrders" asp-controller="ProductsOrder"> Order History </a>
            </li>
        }
        else if (user.UserType == 'S')
        {
            <li class="nav-item">
                <a id="addgoods" class="nav-link text-dark" asp-action="Index" asp-controller="Goods">Manage Goods</a>
            </li>
        }

        //Common Items
        <li class="nav-item">
            <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                <i class="fas fa-user-circle icon-large" style="font-size:30px; color:#247724"></i>
            </a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">
                    <i class="fa fa-sign-out" style="font-size:30px; color:#d71010"></i>
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="styled-link" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="styled-link" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
<style>
    .styled-link {
        display: inline-block;
        padding: 10px 15px;
        background-color: #0d9979;
        color: #fff;
        border-radius: 5px;
        transition: background-color 0.3s, color 0.3s;
        margin-left: 5px; /* Space between buttons */
        text-decoration: none; /* Remove underline */
    }

    .styled-link:hover, .styled-link:focus {
        background-color: #095745;
        color: #ffffff;
        text-decoration: none; /* Remove underline on hover/focus */
    }

    .navbar-nav .nav-item .styled-link:not(:last-child) {
        margin-right: 10px; /* Space between register and login */
    }

    .nav-item.dropdown:hover .dropdown-menu {
        display: block;
    }

    .dropdown-menu {
        display: none;
        position: absolute;
        left: 0;
        z-index: 1000;
        box-shadow: 0 0 5px rgba(0,0,0,.2);
        background-color: #fff;
        padding: 10px;
    }

    .dropdown-item {
        display: block;
        padding: 5px 10px;
        text-decoration: none;
    }

    .dropdown-item:hover {
        background-color: #f8f9fa;
        color: black;
    }
</style>