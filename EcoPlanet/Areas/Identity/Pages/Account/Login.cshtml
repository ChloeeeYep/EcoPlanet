@page
@model LoginModel

@{
    ViewData["Title"] = "Log In";
}

<div class="container mt-custom">
    <div class="container h-100">
        <div class="row h-100 justify-content-center align-items-center">
            <div class="col-12 col-sm-8 col-md-6 col-lg-4">
                <div class="login-container p-5">
                    <h1 class="text-center mb-4">@ViewData["Title"]</h1>
                    <section>
                        <form id="account" method="post">
                            <hr />
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                <label asp-for="Input.Email">Email</label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                                <label asp-for="Input.Password">Password</label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="checkbox mb-3">
                                <label asp-for="Input.RememberMe">
                                    <input asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log In</button>
                            <div class="mt-4 text-center">
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register A New Account</a>
                            </div>
                        </form>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .container {
        max-width: 100%;
        height: auto;
    }

    .mt-custom {
        margin-top: 40px; /* Adjust this value as necessary */
    }

    .login-container {
        background: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgb(0 0 0 / 55%);
        height: auto; /* Control height here if needed */
        max-height: 600px; /* Control maximum height here if needed */
        display: flex;
        flex-direction: column;
        justify-content: center;
    }
    .form-control {
        border-radius: 5px;
    }

    .btn-primary {
        border-radius: 5px;
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #004085;
    }

    hr {
        margin-top: 0;
        border-color: #eee;
    }
</style>
